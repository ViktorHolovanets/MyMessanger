<Window x:Class="MyMessangerExam.ViewElement.VideoCall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMessangerExam.ViewElement"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel>
        <Button x:Name="btnStart" DockPanel.Dock="Bottom">Start</Button>
        <Button x:Name="btnStop" DockPanel.Dock="Bottom" Click="btnStop_Click">Stop</Button>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="MyImage"  Stretch="Uniform"></Image>
            <Image x:Name="FriendImage" Grid.Column="1" Stretch="Uniform"></Image>
        </Grid>
    </DockPanel>
</Window>
